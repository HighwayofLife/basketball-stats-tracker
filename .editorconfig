root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2
max_line_length = 120

[*.{py,java,r,R}]
indent_style = space
indent_size = 4

[*.{json,json,y{a,}ml,html,cwl}]
indent_style = space
indent_size = 2

[*.{mdRmd,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
